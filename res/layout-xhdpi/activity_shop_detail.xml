<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custome="http://schemas.android.com/apk/res/com.lekoko.sansheng"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dddddd"
    android:orientation="vertical" >

    <com.view.HeadBar
        android:id="@+id/Head_Bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.view.HeadBar>

    <LinearLayout
        android:id="@+id/Layout_Tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Head_Bar"
        android:layout_marginTop="-3dip"
        android:orientation="horizontal" >

        <com.view.BtnTab
            android:id="@+id/Btn_Info"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:text="基本信息"
            android:textSize="15sp"
            custome:select_color="@color/selected_color"
            custome:selected="true"
            custome:unselect_color="@color/unselected_color" />

        <com.view.BtnTab
            android:id="@+id/Btn_Detail"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:text="详细信息"
            android:textSize="15sp"
            custome:select_color="@color/selected_color"
            custome:selected="false"
            custome:unselect_color="@color/unselected_color" />

        <com.view.BtnTab
            android:id="@+id/Btn_Evaluation"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_weight="1"
            android:text="用户评价"
            android:textSize="15sp"
            custome:select_color="@color/selected_color"
            custome:selected="false"
            custome:unselect_color="@color/unselected_color" />
    </LinearLayout>

    <com.view.StaticViewPager
        android:id="@+id/ViewPaper_Content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/Layout_Tab" >
    </com.view.StaticViewPager>

    <!--
    <FrameLayout
        android:id="@+id/Content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/Layout_Tab" >
    </FrameLayout>
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <com.view.IconButton
            android:id="@+id/Btn_Search"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custome:btn_icon="@drawable/img_shop_car"
            custome:btn_text="@string/search" >
        </com.view.IconButton>

        <com.view.IconButton
            android:id="@+id/Btn_Shopp_Car"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custome:btn_icon="@drawable/search"
            custome:btn_text="@string/shopp_car" >
        </com.view.IconButton>
    </LinearLayout>

</RelativeLayout>