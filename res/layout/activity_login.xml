<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custome="http://schemas.android.com/apk/res/com.lekoko.sansheng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/Layout_Login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
          >

        <RelativeLayout
            android:id="@+id/Layout_Login"
            android:layout_width="fill_parent"
            android:layout_height="130dip"
            android:background="@drawable/login_head_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/Btn_setting"
                android:layout_width="146dip"
                android:layout_marginTop="15dip"
                android:layout_height="50dip"
                android:layout_marginLeft="20dip"
                android:background="@drawable/login_logo" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/Btn_setting"
                android:orientation="horizontal" >

                <com.view.BtnTab
                    android:id="@+id/Btn_Member"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="会员登入"
                    android:textSize="15sp"
                    custome:select_color="@drawable/btn_login_right"
                    custome:select_text_color="#000000"
                    custome:selected="true"
                    custome:unselect_color="@color/unselected_color"
                    custome:unselect_text_color="#ffffff" />

                <com.view.BtnTab
                    android:id="@+id/Btn_Shop"
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:text="工作室登入"
                    android:textSize="15sp"
                    custome:select_color="@drawable/btn_login_left"
                    custome:select_text_color="#000000"
                    custome:selected="false"
                    custome:unselect_color="@color/unselected_color"
                    custome:unselect_text_color="#ffffff" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FL_Content"
            android:layout_width="fill_parent"
              android:layout_height="wrap_content"
            android:layout_below="@id/Layout_Login"
            android:background="#ebebeb" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/FL_Content2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Layout_Login"
            android:background="#ebebeb" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/FL_Head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ebebeb" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_bottom" />
    </RelativeLayout>

</LinearLayout>